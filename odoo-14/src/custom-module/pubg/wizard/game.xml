<odoo>
    <data>
        <record model="ir.ui.view" id="samplewizard_form">
            <field name="name">samplewizard form</field>
            <field name="model">game</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" string="Name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pubg.action_wizard">
            <field name="name">samplewizard action</field>
            <field name="res_model">game</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="samplewizard_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>

