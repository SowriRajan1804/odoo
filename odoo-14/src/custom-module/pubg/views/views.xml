<odoo>
    <data>

        <!-- explicit Tree or List view definition -->

        <record model="ir.ui.view" id="pubg.list">
            <field name="name">pubg list</field>
            <field name="model">pubg.pubg</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="in_game_name"/>
                    <field name="real_name"/>
                    <field name="most_game_played"/>
                    <field name="clan"/>
                    <field name="tier"/>
                    <field name="popularity"/>
                    <field name="achievements"/>
                    <field name="age"/>
                    <field name="rp"/>
                    <field name="acc_number"/>
                    <field name="kd_ratio"/>
                    <field name="top_10"/>
                    <field name="wins"/>
                </tree>
            </field>
        </record>

        <!-- explicit Form view definition -->

        <record model="ir.ui.view" id="pubg.form">
            <field name="name">pubg form</field>
            <field name="model">pubg.pubg</field>
            <field name="arch" type="xml">
                <form>
<!--                    <header>-->
<!--                        <button name ="submit" type="object" string="submit"/>-->
<!--                    </header>-->
                    <sheet>
                        <group>
                            <group>
                                <field name="in_game_name"/>
                            </group>
                             <group>
                                <field name="bday"/>
                            </group>
                            <group>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="most_game_played"/>
                            </group>
                            <group>
                                <field name="acc_number"/>
                            </group>
                            <group>
                                <field name="kd_ratio"/>
                            </group>
                            <group>
                                <field name="real_name"/>
                            </group>
                            <group>
                                <field name="clan"/>
                            </group>
                            <group>
                                <field name="tier"/>
                            </group>
                            <group>
                                <field name="achievements"/>
                            </group>
                            <group>
                                <field name="top_10"/>
                            </group>
                            <group>
                                <field name="wins"/>
                            </group>
                            <group>
                                <field name="rp"/>
                            </group>
                            <group>
                                <field name="popularity"/>
                            </group>
                            <group>
                                <field name="mode"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="PLAYER LEVEL">
                                <group>
                                    <field name="player_level"/>
                                </group>
                            </page>
                            <page string="EVO LEVEL">
                                <group>
                                    <field name="evo_level"/>
                                </group>
                            </page>
                            <page string="LOOKING FOR">
                                <group>
                                    <field name="looking_for"/>
                                </group>
                            </page>
                            <page string="ROLE">
                                <group>
                                    <field name="role_1"/>
                                    <field name="role_2"/>
                                </group>
                            </page>
                            <page string="ONLINE">
                                <group>
                                    <field name="online_days"/>
                                    <field name="online_time"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- explicit Search view definition -->

        <record model="ir.ui.view" id="pubg.search">
            <field name="name">pubg search</field>
            <field name="model">pubg.pubg</field>
            <field name="arch" type="xml">
                <search>
                    <field name="in_game_name"/>
                    <field name="real_name"/>
                    <field name="most_game_played"/>
                    <field name="clan"/>
                    <field name="tier"/>
                    <field name="age"/>
                    <field name="rp"/>
                    <field name="acc_number"/>
                    <field name="kd_ratio"/>
                    <field name="top_10"/>
                    <field name="wins"/>
                    <field name="popularity"/>
                    <field name="mode"/>
                    <field name="achievements"/>
                    <group>
                        <filter string="tier" name="tier" context="{'group_by':'tier'}"/>
                        <filter string="map" name="most_game_played" context="{'group_by':'most_game_played'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- explicit Kanban view definition -->

        <record model="ir.ui.view" id="pubg.kanban">
            <field name="name">pubg kanban</field>
            <field name="model">pubg.pubg</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="in_game_name"/>
                    <field name="real_name"/>
                    <field name="most_game_played"/>
                    <field name="clan"/>
                    <field name="tier"/>
                    <field name="age"/>
                    <field name="rp"/>
                    <field name="acc_number"/>
                    <field name="kd_ratio"/>
                    <field name="top_10"/>
                    <field name="wins"/>
                    <field name="popularity"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="kanban_view_box">
                                <div class="kanban_title">
                                    <strong class="kanban_title_field">
                                        <field name="real_name"/>
                                    </strong>
                                </div>
                                <div>
                                    <field name="age"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- inheritance / inherited view for sale order -->

        <record id="sale_order_inherit" model="ir.ui.view">
            <field name="name">sale.order.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="payment_reference" position="after">
                    <field name="checking"/>
                </field>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="pubg.action_window">
            <field name="name">pubg window</field>
            <field name="res_model">pubg.pubg</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

        <!-- server action to the one above -->

        <record model="ir.actions.act_window" id="pubg.action_server">
            <field name="name">pubg server</field>
            <field name="res_model">pubg.pubg</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="pubg.form"/>
        </record>

        <!-- Top menu item -->

        <menuitem name="pubg" id="pubg.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Player Data" id="pubg.menu_1" parent="pubg.menu_root"/>
        <menuitem name="Register New Data" id="pubg.menu_2" parent="pubg.menu_root"/>
        <menuitem name="Register New Event" id="pubg.menu_3" parent="pubg.menu_root"/>

        <!-- actions -->

        <menuitem name="list" id="pubg.menu_1_list" parent="pubg.menu_1"
                  action="pubg.action_window"/>
        <menuitem name="form" id="pubg.menu_2_form" parent="pubg.menu_2"
                  action="pubg.action_server"/>
        <menuitem name="form" id="pubg.menu_3_wizard" parent="pubg.menu_3"
                  action="pubg.action_server"/>

    </data>
</odoo>
