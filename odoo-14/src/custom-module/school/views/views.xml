<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="school.list">
            <field name="name">school list</field>
            <field name="model">school.school</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="value"/>
                    <field name="value2"/>
                </tree>
            </field>
        </record>
        <!--colender view for calendar-->

        <record id="school_event_calendar" model="ir.ui.view">
            <field name="name">school.event.calendar</field>
            <field name="model">school.school</field>
            <field name="arch" type="xml">
                <calendar string="Appointment Calendar" date_start="date" color="name" mode="month" quick_add="True">
                    <!--                <field name="name"/>-->
                    <!--                <field name="patient_id"/>-->
                    <field name="name"/>
                    <field name="value"/>
                    <field name="value2"/>
                    <field name="date"/>
                </calendar>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="school.action_window">
            <field name="name">School Events</field>
            <field name="res_model">school.school</field>
            <field name="view_mode">calendar,tree,form</field>

        </record>

        <record model="ir.actions.act_window" id="school.staff_action_window">
            <field name="name">School Events</field>
            <field name="res_model">school.staff</field>
            <field name="view_mode">tree,form,kanban</field>
            <!--          <field name="view_id" ref="school.staff_list"/>-->
        </record>
        <record model="ir.actions.act_window" id="school.student_markList">
            <field name="name">Mark List</field>
            <field name="res_model">school.student</field>

            <field name="view_mode">tree,form</field>
            <!--          <field name="view_id" ref="school.staff_list"/>-->
        </record>
        <record model="ir.actions.act_window" id="school.student_wizards">
        <field name="name">Mark List</field>
        <field name="res_model">school.wizards</field>
        <field name="view_mode">form</field>
        <field name = "view_id" ref = "school.student_wizards"/>
        <field name = "target" >new</field>
        </record>

        <record model="ir.actions.act_window" id="school.student_mark_wizards">
            <field name="name">Mark List</field>
            <field name="res_model">school.edit</field>
            <field name="view_mode">form</field>
            <field name = "view_id" ref = "school.student_form"/>
            <field name = "target" >new</field>
            <!--             it use to view wizards-->

        </record>

        <!-- server action to the one above -->

        <record model="ir.actions.server" id="school.action_server">
            <field name="name">school server</field>
            <field name="model_id" ref="model_school_school"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                "type": "ir.actions.act_window",
                "view_mode": "tree,form",
                "res_model": model._name,
                }
            </field>
        </record>


        <!-- Top menu item -->

        <menuitem name="school" id="school.menu_root" action="school.action_window"/>

        <!-- menu categories -->

        <menuitem name="Staff" id="school.menu_1" parent="school.menu_root"/>
        <menuitem name="Student" id="school.menu_2" parent="school.menu_root"/>

        <!-- actions -->

        <menuitem name="Teaching" id="school.menu_1_list" parent="school.menu_1"
                  action="school.staff_action_window"/>
        <menuitem name="Non-Teaching" id="school.menu_2_list" parent="school.menu_1"
                  action="school.student_mark_wizards"/>
        <menuitem name="mark list" id="school" parent="school.menu_2"
                  action="school.student_markList"/>

    </data>
</odoo>