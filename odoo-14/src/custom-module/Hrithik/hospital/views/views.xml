        <!--          "type": "ir.actions.act_window",-->
        <!--          "view_mode": "tree,form",-->
        <!--          "res_model": model._name,-->
        <!--        }-->
        <!--      </field>-->
        <!--    </record>-->


        <!-- Top menu item -->

        <menuitem name="Hospital" id="hospital.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Menu 1" id="hospital.menu_1" parent="hospital.menu_root"/>
        <menuitem name="Menu 2" id="hospital.menu_2" parent="hospital.menu_root"/>

        <!-- actions -->

        <menuitem name="Doctor List" id="hospital.menu_1_list" parent="hospital.menu_1"
                  action="hospital.action_window"/>
        <menuitem name="Patient List" id="hospital" parent="hospital.menu_2"
                  action="patients.action_window"/>

    </data>
</odoo>